<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/floor_1_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8e9c78"
    android:contentDescription="@string/active"
    tools:context=".GroundFloorActivity">

    <ImageView
        android:id="@+id/GroundFloorMap"
        android:layout_width="0dp"
        android:layout_height="731dp"
        android:contentDescription="@string/ground_floor_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gui1" />

    <Button
        android:id="@+id/FirstFloorBtn"
        android:layout_width="36dp"
        android:layout_height="46dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="140dp"
        android:background="#00FFFFFF"
        android:onClick="launchFirstFloor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/first_1"
        android:layout_width="269dp"
        android:layout_height="256dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="50dp"
        android:background="#00FFFFFF"
        android:onClick="launchFirstFloor"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/GroundFloorMap"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/first_2"
        android:layout_width="65dp"
        android:layout_height="114dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="280dp"
        android:background="#00FFFFFF"
        android:onClick="launchFirstFloor"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/first_3"
        android:layout_width="177dp"
        android:layout_height="44dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="300dp"
        android:background="#00FFFFFF"
        android:onClick="launchFirstFloor"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/NameOfGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="92dp"
        android:fontFamily="@font/avenir"
        android:text="@string/ground_floor_text"
        android:textColor="@color/galleryColor"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/GlassGalleryBtn"
        android:layout_width="122dp"
        android:layout_height="65dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="225dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/TreasuryBtn"
        android:layout_width="89dp"
        android:layout_height="90dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="250dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#8E3636"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="24dp"
        android:layout_height="27dp"
        android:layout_marginEnd="196dp"
        android:layout_marginBottom="248dp"
        android:contentDescription="@string/active"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/activegallery" />

    <Button
        android:id="@+id/GothicChapelBtn"
        android:layout_width="29dp"
        android:layout_height="82dp"
        android:layout_marginStart="110dp"
        android:layout_marginBottom="200dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/BonnefontClositerBtn"
        android:layout_width="126dp"
        android:layout_height="109dp"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="110dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/Default"
        android:layout_width="48dp"
        android:layout_height="55dp"
        android:layout_marginStart="350dp"
        android:layout_marginTop="102dp"
        android:contentDescription="@string/magnify_glass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/zoominactive" />

    <Button
        android:id="@+id/TrieClostierBtn"
        android:layout_width="67dp"
        android:layout_height="93dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="140dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/NumOfPodcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="18dp"
        android:contentDescription="@string/number_of_podcast"
        android:textColor="@color/textwhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Change_Gallery"
        android:layout_width="45dp"
        android:layout_height="47dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="15dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/change_gallery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>